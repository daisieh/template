<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<context-param>
		<param-name>site_class</param-name>
		<param-value>template.TEMPLATE</param-value>
	</context-param>
	<filter>
		<filter-name>longcache</filter-name>
		<filter-class>db.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=31536000</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>shortcache</filter-name>
		<filter-class>db.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>max-age=7200</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>nocache</filter-name>
		<filter-class>db.ResponseHeaderFilter</filter-class>
		<init-param>
			<param-name>Cache-Control</param-name>
			<param-value>private,no-cache,no-store</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>longcache</filter-name>
		<url-pattern>*.gif</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>longcache</filter-name>
		<url-pattern>*.jpg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>longcache</filter-name>
		<url-pattern>*.jpeg</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>longcache</filter-name>
		<url-pattern>*.png</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>shortcache</filter-name>
		<url-pattern>*.css</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>shortcache</filter-name>
		<url-pattern>*.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>nocache</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>nocache</filter-name>
		<url-pattern>*.shtml</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>nocache</filter-name>
		<url-pattern>*.txt</url-pattern>
	</filter-mapping>
	<listener>
    	<listener-class>
    		db.ContextListener
    	</listener-class>
	</listener>
	<servlet>
		<servlet-name>db</servlet-name>
		<servlet-class>db.DB</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>controller</servlet-name>
		<servlet-class>db.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>db</servlet-name>
		<url-pattern>/db/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>controller</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>coho</web-resource-name>
			<url-pattern>/db/*</url-pattern>
			<url-pattern>/documents/*</url-pattern>
			<url-pattern>/neighbors/*</url-pattern>
			<url-pattern>*.jsp</url-pattern>
			<url-pattern>*.zip</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>coho</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>coho</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login_error.jsp</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<role-name>coho</role-name>
	</security-role>
	<error-page> 
    	<error-code>404</error-code> 
    	<location>/404.jsp</location> 
	</error-page>
</web-app>
